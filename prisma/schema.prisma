// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model BusinessTerm {
  id Int @id
  term_name String
  start_date DateTime
  end_date DateTime
  MultiTerm MultiTerm?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model MultiTerm {
  id Int @id
  business_term BusinessTerm @relation(fields: [business_term_id],references: [id])
  business_term_id Int @unique
  start_date DateTime
  end_date DateTime
  multi_evaluation MultiEvaluation[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
model User {
  id Int @id
  name String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
model MultiEvaluation {
  id Int @id @default(autoincrement())
  user_id Int
  target_user_id Int
  multi_term MultiTerm @relation(fields: [multi_term_id],references: [id])
  multi_term_id Int
  score Int
  comment String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
